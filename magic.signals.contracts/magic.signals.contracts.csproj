<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A Super Signals implementation allowing you to invoke functionality from other assemblies, without any direct references between the caller and the callee. Contains only interfaces, in case you want to replace parts of its default service list.</Description>
    <Copyright>Thomas Hansen, thomas@gaiasoul.com</Copyright>
    <PackageProjectUrl>https://github.com/polterguy/magic.signals</PackageProjectUrl>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="magic.node" Version="1.0.0" />
  </ItemGroup>
</Project>
